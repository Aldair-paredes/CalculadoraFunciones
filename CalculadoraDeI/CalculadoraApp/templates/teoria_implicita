    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const hamburgerBtn = document.querySelector('.hamburger-menu');
            const closeSidebarBtn = document.querySelector('.close-sidebar-btn');
            const sidebar = document.getElementById('sidebarNav');
            const mainContent = document.querySelector('.main-content');

            if (!sidebar || !mainContent || !hamburgerBtn) {
                console.error("Error: No se encontraron todos los elementos necesarios para el navbar.");
                console.error("Sidebar:", sidebar, "Main Content:", mainContent, "Hamburger Button:", hamburgerBtn);
                return;
            }

            function setSidebarState(isOpen) {
                if (isOpen) {
                    sidebar.classList.add('active');
                    hamburgerBtn.style.display = 'none';
                    if (closeSidebarBtn) {
                        closeSidebarBtn.style.display = 'block';
                    }
                    mainContent.style.marginLeft = '260px'; 
                } else {
                    sidebar.classList.remove('active');
                    if (window.innerWidth <= 991.98) {
                        hamburgerBtn.style.display = 'block';
                    } else {
                        hamburgerBtn.style.display = 'none';
                    }
                    if (closeSidebarBtn) {
                        closeSidebarBtn.style.display = 'none';
                    }
                    mainContent.style.marginLeft = '0';
                }
            }

            function toggleSidebar() {
                setSidebarState(!sidebar.classList.contains('active'));
            }

            hamburgerBtn.addEventListener('click', toggleSidebar);
            if (closeSidebarBtn) {
                closeSidebarBtn.addEventListener('click', toggleSidebar);
            }

            function handleInitialAndResizeLoad() {
                if (window.innerWidth > 991.98) {
                    setSidebarState(true); 
                } else {
                    setSidebarState(false); 
                }
            }

             window.addEventListener('resize', handleInitialAndResizeLoad);
            handleInitialAndResizeLoad(); 

            const tabButtons = document.querySelectorAll('.tab-btn');
            const tabContents = document.querySelectorAll('.tab-content');

            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const targetTab = button.dataset.tab;

                    tabButtons.forEach(btn => {
                        btn.classList.remove('active', 'text-white', 'bg-calc-manatee');
                        btn.classList.add('text-calc-mantle','hover:text-calc-manatee', 'hover:border-calc-manatee');
                    });

                    button.classList.add('active', 'text-white', 'bg-calc-manatee');
                    button.classList.remove('text-calc-mantle', 'hover:text-calc-manatee', 'hover:border-calc-manatee');

                    tabContents.forEach(content => content.classList.remove('active'));
                    document.getElementById(targetTab).classList.add('active');

                    if (typeof MathJax !== 'undefined') {
                        MathJax.typesetPromise([document.getElementById(targetTab)]).catch((err) => console.log('MathJax typeset error:', err));
                    }
                });
            });

            const initialActiveButton = document.querySelector('.tab-btn.active');
            if (initialActiveButton) {
                initialActiveButton.click(); 
            }

            const derivationSteps = document.querySelectorAll('#derivationSteps .step');
            derivationSteps.forEach(step => {
                step.classList.add('visible');
            });
        });
    </script>
</body>
